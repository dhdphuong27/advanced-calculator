<!-- res/drawable/rounded_corner_bg.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/white" /> <!-- Change to your preferred color -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" /> <!-- Adjust radius as needed -->


    <!-- Optional: Add a border -->
    <stroke
        android:width="1dp"
        android:color="@color/pressed" /> <!-- Border color -->
</shape>