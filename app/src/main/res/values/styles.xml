<resources>

    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ButtonStyle" parent="BaseButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">?attr/buttonTextColor</item>

    </style>

    <style name="ImportantButtonStyle" parent="BaseButton">
        <item name="android:background">@drawable/important_button</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>

    <style name="AdvancedButtonStyle" parent="BaseButton">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/advanced_button</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>

    <style name="DefaultStyle">
        <item name="android:background">?attr/appBackground</item>
    </style>
</resources>
